{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                // "${workspaceFolder}/${file}",
                // "*.c",
                // "${file}",
                "push_swap.c",
                "stack_utils.c",
                "sort_utils.c",
                "slarge_utils.c",
                "slarge_utils1.c",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-L./libft",
                "-lft"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}